<?xml version="1.0" encoding="utf-8" ?>
<auForm>
  <section name="body">
    <stack>
      <row header="Nome">
        <textbox text="{path:'nome'}" id="nome" />
      </row>
      <row header="Cognome">
        <textbox text="{path:'cognome'}" id="cognome" />
      </row>
      <row header="Messaggio 1">
        <textbox id="msg1" readonly="true" />
      </row>
      <row header="Messaggio 2">
        <textblock id="msg2" />
      </row>
    </stack>
  </section>

  <section name="footer">
    <stack halign="right">
      <button text="Close" id="close" />
    </stack>
  </section>
</auForm>