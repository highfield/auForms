<?xml version="1.0" encoding="utf-8" ?>
<auForm>
  <section name="header">
    <stack inline="true">
      <button text="Log off" id="logoff" />
    </stack>
  </section>
  
  <section name="body">
    <stack>
      <button text="Refresh" id="refresh" />
      
      <panel header="Preferenze" bg="panel-default">
        <row header="Naming">
          <radio value="{path:'naming', validate:{required:true} }">
            <option key="D">Descrizione</option>
            <option key="L">Nome logico</option>
            <option key="P">Nome fisico</option>
          </radio>
        </row>
      </panel>
    </stack>
  </section>
  
  <section name="footer">
    <stack inline="true">
      <button text="Salva" id="save" />
    </stack>
  </section>
</auForm>