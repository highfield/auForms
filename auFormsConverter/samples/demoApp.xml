<?xml version="1.0" encoding="utf-8" ?>
<auForm>
  <section name="body">
    <stack>
      <row header="Esempio">
        <select value="{path:'sampleSelector'}">
          <option key="">(none)</option>
          <option key="buttonDemo_2+2">buttonDemo 2+2</option>
          <option key="basicText">basicText</option>
          <option key="basicValidation">basicValidation</option>
          <option key="panels">panels</option>
          <option key="basicWizard">basicWizard</option>
          <option key="dynamicLayout">dynamicLayout</option>
          <option key="iconery">iconery</option>
          <option key="settingsL1">settingsL1</option>
          <option key="settingsL2">settingsL2</option>
          <option key="userPrefs">userPrefs</option>
        </select>
      </row>
      <row header="Target">
        <select value="{path:'viewTarget'}">
          <option key="page">page</option>
          <option key="dialog">dialog</option>
          <option key="sidebar">sidebar</option>
        </select>
      </row>

      <panel header="Preferenze" bg="panel-info">
        <stack grid-col-defs="4 8">
          <row header="Separatore decimale">
            <select value="{path:'decimale' }">
              <option key=".">. (punto)</option>
              <option key=",">, (virgola)</option>
            </select>
          </row>
          <row header="Separatore migliaia">
            <select value="{path:'migliaia' }">
              <option key="">(nessuno)</option>
              <option key=" ">(spazio)</option>
              <option key=".">. (punto)</option>
              <option key=",">, (virgola)</option>
            </select>
          </row>
          <row header="Formato data/ora">
            <select value="{path:'dataora' }">
              <option key="">Default (Inglese USA)</option>
              <option key="it">Italia</option>
              <option key="de">Germania</option>
              <option key="fr">Francia</option>
              <option key="es">Spagna</option>
              <option key="hu">Ungheria</option>
              <option key="zh-cn">Cina</option>
              <option key="ar-ma">Marocco</option>
            </select>
          </row>
        </stack>
      </panel>
    </stack>
  </section>

  <section name="footer">
    <stack inline="true" halign="right">
      <button text="Open 'Women'" id="btnOpenWomen" />
      <button text="Remove" id="btnRemoveForm" />
      <button text="Show" id="btnShowForm" />
    </stack>
  </section>
</auForm>